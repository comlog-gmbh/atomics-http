{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"lib": [
			"es6",
			"es2017.sharedmemory"
		],
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"declaration": true,
		"typeRoots": [
			"./@types",
			"./node_modules/@types"
		],

	},
	"compileOnSave": false,
	"exclude": [ "./**.js", "./src/**/*.bak.ts", "node_modules"],
	"include": [ "./src/**/*.ts" ]
}
